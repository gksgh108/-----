package com.tukorea.repository;

import java.util.*;

import com.tukorea.domain.Member;

public abstract class MemoryMemberRepository implements MemberRepositoryIF{

	private static Map<Integer, Member> store = new HashMap<>();
	private static int sequence = 0;
	
	/**
	* 회원 정보 등록 구현 메서드
	*/
	@override
	public Member insertMember(Member member) {
		// member id 설정
		member.setId(++sequence);
		// store 객체에 member 정보 추가
		store.put(member.getId(), member);
		return member;

	}
	
	/**
	* 아이디로 회원 정보 조회 구현 메서드
	*/
	@override
	public Member selectMemberById(int id) {
		// id key 값을 이용하여 store 객체에서 정보 꺼내기
		return store.get(id);
		
	}
	
	@override
	public Member selectMemberByName(String name) {
		Member result = null;
		Iterator<Integer> keys = store.keySet().iterator();
		while(keys.hasNext()) {
			Member tMember = store.get(keys.next());
			if (name.equals(tMember.getName())) {
				result = tMember;
		}
	}
	return result;

		
	}
	
	@override
	public List<Member> selectMemberList() {
		// store 객체를 List 형태로 변환하여 return
		return new ArrayList<>(store.values());
	}
}
